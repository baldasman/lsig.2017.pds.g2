    <!-- Table -->

    <table class="table">
      <thead>
      <tr>
        <th>Codigo</th>
        <th>Preco</th>
        <th>Data de Entrega</th>
        <th>Descricao</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <% @orders.each do |order| %>
          <tr>
            <td><%= order.id%></td>
            <td><%= order.price %></td>
            <td><%= order.deadline %></td>
            <td><%= order.description %></td>
            <td><%= order.status %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<%else%>
