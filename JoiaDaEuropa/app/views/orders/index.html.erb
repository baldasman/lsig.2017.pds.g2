<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<% if policy(@orders).index? %>
    <p>Usuario Admin</p>

    <%= form_tag orders_path, :method => 'get' do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search" %>
    <% end %>


    <%= link_to "Advanced Search", new_search_path  %>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Deadline</th>
      <th>Description</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.price %></td>
        <td><%= order.deadline %></td>
        <td><%= order.description %></td>
        <td><%= order.status %></td>
        <td><%= order.user.email %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>

<% else %>

    <p>Usuario comum</p>

    <%= form_tag orders_path, :method => 'get' do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search" %>
    <% end %>


    <%= link_to "Advanced Search", new_search_path  %>

    <table>
      <thead>
      <tr>
        <th>Price</th>
        <th>Deadline</th>
        <th>Description</th>
        <th>Status</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @orders.each do |order| %>
          <tr>
            <td><%= order.price %></td>
            <td><%= order.deadline %></td>
            <td><%= order.description %></td>
            <td><%= order.status %></td>
            <td><%= order.user.email %></td>

          </tr>
      <% end %>
      </tbody>
    </table>

    <br>

<% end %>
