<%= link_to 'Encomendas Aceitas', '/accepted' %> |
<%= link_to 'Encomendas Concluidas', 'concluded#concluded' %>

<p id="notice"><%= notice %></p>

<h1>Todas Encomendas</h1>


<%= form_tag orders_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
<% end %>

<%= link_to "Advanced Search", new_search_path  %>

<br><br>

<% if policy(@orders).index? %>
    <table>
      <thead>
        <tr>
          <th>Price</th>
          <th>Deadline</th>
          <th>Description</th>
          <th>Status</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.price %></td>
            <td><%= order.deadline %></td>
            <td><%= order.description %></td>
            <td><%= order.status %></td>
            <td><%= order.user.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% else %>
    <table>
      <thead>
        <tr>
          <th>Price</th>
          <th>Deadline</th>
          <th>Description</th>
          <th>Status</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
      <% @orders.each do |order| %>
          <tr>
            <td><%= order.price %></td>
            <td><%= order.deadline %></td>
            <td><%= order.description %></td>
            <td><%= order.status %></td>
            <td><%= order.user.email %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <br>
<% end %>
