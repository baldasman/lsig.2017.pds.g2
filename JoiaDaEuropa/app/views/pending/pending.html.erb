<h1>Encomendas Pendentes</h1>
  <div class="panel panel-primary">
    <!-- Default panel contents -->
    <div class="panel-heading">Resultados</div>
    <%if current_user.role == 'normal_user'%>
    <!-- Table -->
    <table class="table">
      <thead>
      <tr>
        <th>Codigo</th>
        <th>Preco</th>
        <th>Data de Entrega</th>
        <th>Descricao</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <% @orders.each do |order| %>
          <tr>
            <td><%= order.id%></td>
            <td><%= order.price %></td>
            <td><%= order.deadline %></td>
            <td><%= order.description %></td>
            <td><%= order.status %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>

<%else%>
    <table class="table">
      <thead>
      <tr>
        <th>Codigo</th>
        <th>Preco</th>
        <th>Data de Entrega</th>
        <th>Descricao</th>
        <th>Status</th>
        <th>User</th>
        <th></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @orders.each do |order| %>
          <tr>
            <td><%= order.id%></td>
            <td><%= order.price %></td>
            <td><%= order.deadline %></td>
            <td><%= order.description %></td>
            <td><%= order.status %></td>
            <td><%= order.user.email %></td>
            <td><%= link_to 'Aceitar', accept_order_path(order.id), {method: 'post'} %></td>
            <td><%= link_to 'Cancelar', cancel_order_path(order.id), {method: 'post'}%></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<%end%>
