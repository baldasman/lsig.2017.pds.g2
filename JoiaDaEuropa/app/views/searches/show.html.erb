        <div class="panel-heading">Resultados</div>
        <table class="table">
          <thead>
          <tr>
            <th>Description</th>
            <th>Price</th>
            <th>Status</th>
          </tr>
          </thead>
          <% @search.search_orders.each do |c| %>


              <tbody>

              <tr>
                <td><%= c.description %></td>
                <td>$<%= c.price %></td>
                <td><%= c.status %></td>
              </tr>

              </tbody>


          <% end %>
        </table>
